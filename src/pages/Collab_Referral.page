<apex:page standardController="Account" extensions="Collab_CTRL_Referral" title="{!$Label.Collab_labelReferralTitle}" tabStyle="Account" showHeader="false" lightningStylesheets="true">
    <apex:stylesheet value="{!URLFOR($Resource.sfdo213, '/assets/styles/salesforce-lightning-design-system-vf.min.css')}" />
    <apex:stylesheet value="{!URLFOR($Resource.v4sStaticResources, '/v4s_slds/v4s-common.css')}" />
    <apex:includeScript value="http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js" />

    <style>

        body{ background-color:white;  }

        .THIS {
            background-color: white;
        }

        .myTD span.dateFormat {
            display: none !important;
        }
        .myTD.datetime,
        .myTD.textarea {
            min-width: 200px;
        }
        .myTD.picklist,
        .myTD.multipicklist,
        .myTD.reference,
        .myTD.date {
            min-width: 170px;
        }
    </style>

    <script type="text/javascript">
        // hack that prevents Salesforce from always putting focus
        // on the first date field, which pops up the ugly calendar control!
        window.onload = function() {}
    </script>

    <!--this is where the magic happens-->
    <script type="text/javascript">
        //You need to wrap everything in document.ready because the select tag we are taregting needs to
        //be loaded in the DOM before we can access it.
        $(document).ready(function() {

            //-----EDIT THE NEXT TWO LINES-----
            var currentDate = new Date();

            var startYear = parseInt(currentDate.getFullYear()) - 100;
            var endYear = parseInt(currentDate.getFullYear());

            //-----EDIT BELLOW HERE AT YOUR OWN RISK-----
            var optionsString='';
            if(startYear<endYear){
                //Loops through each date and renders the string for an option tag and addes it to the Optrionsstring variable
                for(i = startYear; i < endYear+1; i++){
                    optionsString += "<option value=\""+i+"\">"+i+"</option>";
                }
                //Replace the innerHTML of the calendar picker year select tag with the Optionsstring we constructed.
                $('#calYearPicker').html(optionsString);
            }
        });
    </script>

    <apex:form id="vfform">

        <c:Collab_UTIL_NavigateBack recordId="{!idRedirect}" redirect="{!redirect}"/>

        <div class="sfdo213">

            <!-- PAGE SPINNER -->
            <apex:actionStatus id="retrieveStatus" 
                onstart="document.getElementById('divLoading').style.display='block';"
                onstop="document.getElementById('divLoading').style.display='none';"/>
            <div class="slds-spinner_container" style="z-index:999;position:fixed;display:none;" id="divLoading">
                <div class="slds-spinner--brand slds-spinner slds-spinner--medium" style="position:fixed;top:30%;" aria-hidden="false" role="alert">
                    <div class="slds-spinner__dot-a"></div>
                    <div class="slds-spinner__dot-b"></div>
                </div>
            </div>

            <!-- PAGE HEADER -->
            <div class="slds-page-header" role="banner">
                <div class="slds-grid">
                    <div class="slds-col--padded">
                        <h1 class="slds-page-header__title slds-m-right--small slds-truncate slds-align-middle">{!$Label.Collab_labelReferralTitle}</h1>
                    </div>        
    
                    <div class="slds-col--padded slds-no-flex slds-align-middle">
                        <div class="slds-button-group" role="group">
                            <apex:commandButton styleClass="slds-button slds-button--brand" action="{!SaveAndCloseReferral}" value="{!$Label.Collab_labelButtonSaveAndClose}" id="btnSaveClose" rendered="{!accountRecord.Id == ''}" immediate="false" reRender="vfform"/>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /PAGE HEADER -->
            
            <c:Collab_UTIL_PageMessages />
            <p class="slds-p-around--medium"><apex:outputText value="{!$Label.Collab_labelReferralHelp}" rendered="{!accountRecord.Id == ''}" style="font-style:italic" /></p>

            <apex:pageBlock >
                <apex:pageBlockSection title="Family Fields" columns="2">
                    <apex:repeat value="{!ReferralAccountFields}" var="ff">
                        <apex:pageBlockSection columns="1">
                            <apex:inputField value="{!accountRecord[ff.fieldPath]}" required="{!OR(ff.required, ff.dbrequired)}" />
                            <apex:outputText value="{!$ObjectType[objectType].fields[ff].inlineHelpText}" rendered="{!$ObjectType[objectType].fields[ff].inlineHelpText <> ''}" />                                
                        </apex:pageBlockSection>
                    </apex:repeat>
                </apex:pageBlockSection>

                <apex:pageBlockSection title="Eligibility Fields" columns="2">
                    <apex:repeat value="{!EligibilityAccountFields}" var="ef">
                        <apex:pageBlockSection columns="1">
                            <apex:inputField value="{!accountRecord[ef.fieldPath]}" required="{!OR(ef.required, ef.dbrequired)}" />
                            <apex:outputText value="{!$ObjectType[objectType].fields[ef].inlineHelpText}" rendered="{!$ObjectType[objectType].fields[ef].inlineHelpText <> ''}" />                                
                        </apex:pageBlockSection>
                    </apex:repeat>
                </apex:pageBlockSection>

                <apex:pageBlockSection title="Eligibility Criteria" columns="2" rendered="{!accountRecord.Id <> ''}">
                    <apex:outputText value="{!accountRecord.Eligibility_Criteria__c}" />
                </apex:pageBlockSection>

                <apex:pageBlockSection title="Family Members" rendered="{!accountRecord.Id == ''}">
                    <apex:dataTable value="{!contactRecords}" var="contactRecord" id="tblContacts" 
                        styleClass="slds-table slds-table--compact slds-table--bordered"
                        headerClass="slds-text-heading--label slds-theme--shade" style="width:100%" >  
                                    
                        <!-- Add Field Set Fields -->
                        <apex:repeat value="{!ReferralContactFields}" var="fm" >
                            <apex:column styleClass="myTD {!fm.Type} {!IF($ObjectType['Contact'].fields[fm].dependentPicklist,
                                                        IF(fm.Type == 'picklist', 'dependentPicklistFixup', 'dependentMultiPicklistFixup'),'')}" >
                                <apex:facet name="header">{!fm.Label + IF(fm.DBRequired, ' *', '')}</apex:facet>
                                <apex:inputField value="{!contactRecord[fm]}" 
                                            styleClass="{!CASE(fm.Type, 
                                                            'reference', 'lookupInput', 
                                                            'picklist', 'slds-select',
                                                            'multipicklist', 'slds-select multipicklistSLDSFixup',
                                                            'boolean', 'slds-checkbox',
                                                            'textarea', 'slds-textarea',
                                                            'slds-input')}"
                                                required="false" id="inputX"/>  <!-- not required, or you can't submit empty rows! -->
                            </apex:column>
                        </apex:repeat>
                    </apex:dataTable>
                </apex:pageBlockSection>
                
                <div class="slds-grid">
                    <br/>
                    <apex:commandLink action="{!AddMoreEmptyRows}" value="{!$Label.labelLinkAddMoreRows}" id="linkAdd" immediate="true" reRender="tblContacts" rendered="{!accountRecord.Id == ''}" oncomplete="javascript:fixSearchIMG()"/>
                    <br/>
                </div>
                                
                <div class="slds-grid">
                    <br/>
                    <div class="slds-col--padded slds-no-flex slds-align-middle">
                        <div class="slds-button-group" role="group">
                            <apex:commandButton styleClass="slds-button slds-button--brand" action="{!SaveReferral}" value="{!$Label.Collab_labelButtonSave}" id="btnSaveFooter" rendered="{!accountRecord.Id <> ''}" immediate="false" reRender="vfform,tblReferrals"/>
                            <apex:commandButton styleClass="slds-button slds-button--brand" action="{!SaveAndCloseReferral}" value="{!$Label.Collab_labelButtonSaveAndClose}" id="btnSaveCloseFooter" rendered="{!accountRecord.Id == ''}" immediate="false" reRender="vfform"/>
                        </div>
                    </div>
                </div>

            </apex:pageBlock>

            <script type="text/javascript">
                function fixSearchIMG() {
                    var input = document.getElementsByClassName("lookupInput");
                    var inputLen = input.length;
                    for (i = 0; i < inputLen; i++) {
                        if (typeof(input[i]) !== 'undefined' && input[i].tagName === "INPUT") {
                            input[i].style.visibility = "";
                            var lkSpan = input[i].parentElement;
                            var lkLink = lkSpan.querySelector("a");
                            lkLink.style.visibility = "";
                            lkLink.className = "";
                            lkLink.innerHTML = "<svg aria-hidden=\"true\" class=\"slds-icon slds-input__icon slds-icon--x-small slds-icon-text-default\" viewBox=\"0 0 24 24\"><path  d=\"M22.9 20.9l-6.2-6.1c1.3-1.8 1.9-4 1.6-6.4-.6-3.9-3.8-7.1-7.8-7.4C5 .4.4 5 1 10.5c.3 4 3.5 7.3 7.4 7.8 2.4.3 4.6-.3 6.4-1.5l6.1 6.1c.3.3.7.3 1 0l.9-1c.3-.3.3-.7.1-1zM3.7 9.6c0-3.2 2.7-5.9 5.9-5.9s6 2.7 6 5.9-2.7 6-6 6-5.9-2.6-5.9-6z\"></path></svg>";
                        }
                    }
                }
                fixSearchIMG();
            </script>

        </div> <!-- slds -->    
    </apex:form>
</apex:page>